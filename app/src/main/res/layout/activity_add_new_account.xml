<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccentDark"
    android:focusableInTouchMode="true"
    tools:context="jjpartnership.hub.view_layer.activities.add_new_account_activity.AddNewAccountActivity">

    <jjpartnership.hub.view_layer.custom_views.AutoScrollAdjustableScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:gravity="bottom"
                    android:text="Company Name"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/clear_form_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="end"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:gravity="bottom"
                    android:text="Clear form"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </FrameLayout>

            <jjpartnership.hub.view_layer.custom_views.BackAwareEditText
                android:id="@+id/company_name_back_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rectangle_user_input_bg"
                android:hint="company name..."
                android:inputType="textCapWords"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="Company Address"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:text="Address line 1:"
                android:textColor="@color/white" />

            <jjpartnership.hub.view_layer.custom_views.BackAwareEditText
                android:id="@+id/address_1_back_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rectangle_user_input_bg"
                android:hint="Street address, P.O box"
                android:inputType="textPostalAddress"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Address line 2: (optional)"
                android:textColor="@color/white" />

            <jjpartnership.hub.view_layer.custom_views.BackAwareEditText
                android:id="@+id/address_2_back_et"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rectangle_user_input_bg"
                android:hint="Apartment, suite, unit, building, floor, etc."
                android:inputType="textPostalAddress"
                android:paddingBottom="8dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="4dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorPrimaryLight"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="64dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight=".35"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="City:"
                        android:textColor="@color/white" />

                    <jjpartnership.hub.view_layer.custom_views.BackAwareEditText
                        android:id="@+id/city_et"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_rectangle_user_input_bg"
                        android:hint="City..."
                        android:inputType="textCapWords"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryLight"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight=".35"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="State:"
                        android:textColor="@color/white" />

                    <AutoCompleteTextView
                        android:id="@+id/state_et"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_rectangle_user_input_bg"
                        android:hint="State..."
                        android:inputType="textCapWords"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryLight"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="2dp"
                    android:layout_weight=".4"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="ZIP Code:"
                        android:textColor="@color/white" />

                    <jjpartnership.hub.view_layer.custom_views.BackAwareEditText
                        android:id="@+id/zip_code_et"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_rectangle_user_input_bg"
                        android:inputType="number"
                        android:paddingBottom="8dp"
                        android:paddingEnd="8dp"
                        android:paddingStart="8dp"
                        android:paddingTop="4dp"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorPrimaryLight"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </jjpartnership.hub.view_layer.custom_views.AutoScrollAdjustableScrollView>

    <TextView
        android:id="@+id/send_account_request_tv"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/colorAccentMediumDark"
        android:elevation="8dp"
        android:enabled="false"
        android:gravity="center"
        android:text="Send Request"
        android:textColor="@color/colorAccentVeryDark"
        android:textSize="18sp"
        android:textStyle="bold" />
</FrameLayout>


