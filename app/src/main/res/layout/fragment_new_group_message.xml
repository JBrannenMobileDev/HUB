<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:TagsEditText="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/new_group_message_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rectangle_title"
        android:gravity="center_vertical"
        android:text="New Group Chat"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentDark">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:text="To:"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <mabbas007.tagsedittext.TagsEditText
            android:id="@+id/new_group_message_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@android:color/transparent"
            android:paddingRight="16dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            TagsEditText:tagsBackground="@drawable/rounded_rectangle_tags"
            TagsEditText:tagsCloseImageRight="@drawable/tag_close"
            TagsEditText:tagsPaddingBottom="5dp"
            TagsEditText:tagsPaddingLeft="8dp"
            TagsEditText:tagsPaddingRight="8dp"
            TagsEditText:tagsPaddingTop="4dp"
            TagsEditText:tagsTextColor="@color/white"
            TagsEditText:tagsTextSize="14sp" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccentDark">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Group Name:"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/new_group_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginRight="16dp"
            android:backgroundTint="@android:color/transparent"
            android:ems="10"
            android:hint="  name"
            android:inputType="textCapWords"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textColorHint="@color/colorAccentVeryDark"
            android:textSize="14sp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryVeryLight">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/new_group_message_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/transparent"
                android:ems="10"
                android:hint="new message"
                android:inputType="textCapSentences|textAutoCorrect|textAutoComplete|textMultiLine"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColorHint="@color/grey_text"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rectangle_footer"
        android:elevation="1dp">

        <TextView
            android:id="@+id/new_group_message_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="Cancel"
            android:textAlignment="center"
            android:textColor="@color/grey_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryVeryLight">

        </FrameLayout>

        <TextView
            android:id="@+id/new_group_message_send"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center_vertical"
            android:text="Send"
            android:textAlignment="center"
            android:textColor="@color/grey_text"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>