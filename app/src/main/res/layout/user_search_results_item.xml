<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/account_agents_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:elevation="2dp">

    <FrameLayout
        android:id="@+id/grey_divider_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryVeryLight">

    </FrameLayout>

    <ImageView
        android:id="@+id/send_direct_message_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginRight="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_chat_black_24dp"
        android:tint="@color/colorAccentDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="8dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/user_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rounded_rectangle_orange_sharp"
            android:gravity="center_vertical"
            android:text="S"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="76dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:text="Samantha Miller"
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info1_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="1"
                android:text="Business unit: Chemicals"
                android:textColor="@color/grey_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/info2_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Role: High toxicity sales"
                android:textColor="@color/grey_text"
                android:textSize="14sp"
                android:maxLines="1" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>