<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryVeryLight"
    tools:context="jjpartnership.hub.view_layer.activities.user_profile_activity.UserProfileActivity">

    <FrameLayout
        android:id="@+id/user_profile_header_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorAccentDark">

    </FrameLayout>

    <TextView
        android:id="@+id/user_profile_icon_tv"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/rounded_rectangle_user_color"
        android:elevation="3dp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_rectangle_white_tile_bg"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="36dp"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="16dp"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Phone:"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/user_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:maxLines="1"
            android:text="Email:"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/info1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:maxLines="1"
            android:text="Business Unit:"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/info2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:maxLines="1"
            android:text="Role:"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user_profile_action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/rounded_rectangle_white_tile_bg"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="8dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <LinearLayout
                android:id="@+id/user_profile_send_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:tint="@color/colorAccentDark"
                    app:srcCompat="@drawable/ic_email_black_24dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Email"
                    android:textAlignment="center"
                    android:textColor="@color/hub_logo_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_profile_send_direct_message"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/im8ageView10"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:tint="@color/user_color_14"
                    app:srcCompat="@drawable/ic_chat_black_24dp" />

                <TextView
                    android:id="@+id/textoView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send Direct Message"
                    android:textAlignment="center"
                    android:textColor="@color/hub_logo_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_profile_call"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imag9eView10"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:tint="@color/colorOrange"
                    app:srcCompat="@drawable/ic_call_black_24dp" />

                <TextView
                    android:id="@+id/texhtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:textAlignment="center"
                    android:textColor="@color/hub_logo_color" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/color_picker_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/rounded_rectangle_white_tile_bg"
        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/user_color_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_1"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_14"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView25"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_14"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_13"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_12"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView23"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_2"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_4"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView21"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_5"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView17"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_3"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/user_color_6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_6"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_7"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView26"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_8"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_9"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_15"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView20"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_10"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/user_color_11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@color/user_color_11"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imageView28"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/rounded_rectangle_non_user" />
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cancel_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="8dp"
                android:text="Cancel"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/save_color_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:text="Save"
                android:textColor="@color/colorAccentDark"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
